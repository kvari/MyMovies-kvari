{% extends "layout.html.twig" %}
{% set medicamentMenu = true %}

{% block title %}{{ movie.title }}{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
<div class="well">
    <form class="form-horizontal" role="form">
        <div class="form-group">
            <label class="col-sm-3 control-label">Categorie</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ movie.categorie.name }}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Short description</label>
            <div class="col-sm-9">
            <p class="form-control-static">{{ movie.sDescription }}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Long description</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ movie.lDescription }}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Director</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ movie.director }}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Year</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ movie.year }}</p>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">Image</label>
            <div class="col-sm-9">
                <p class="form-control-static">{{ movie.image }}</p>
            </div>
        </div>
    </form>
</div>
{% endblock %}